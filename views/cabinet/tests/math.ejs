          <section class="bg-danger text-light">
              <div class="container">
                  <div class="row">
                      <div class="col">
                          <h6 class="mt-2">Sayt test rejimida ishlayapti!</h6>
                      </div>
                  </div>
              </div>
          </section>
      <%- include('../../tools/Navbar.ejs') -%>

      
      <section class="pt-4 pb-2 bg-light text-light">  
        <div class="container">
            <div class="row">
                <div class="col">
                    <h6 class="mt-2 text-dark"> >> FAN NOMI </h6>
                </div>
            </div>
        </div>
    </section>



    <form method="post">

      <% questions.forEach((item, index) => { %>
        <div class="test-content container  mt-4 mb-5">
          <div class="test-content row">
            <div class="col-12">
                        <div class="row">
                          <div class="col-md-8 col-sm-12 pt-3 question-text">                              
                            <span><%=item.id%>-savol</span>
                             <p class="fw-bold"> <%=item.question%> </p>
                          </div>
                          <div class="col-md-4 col-sm-12 question-image">    

                            <% if (item.que_logo) { %>
                              <img src="../../<%=item.que_logo%>" width="250px" height="185px" alt="">
                            <% } %>
                            
                          </div>
                           
                        </div>
                        <div>
                          
                        <div class="col-12 mt-2 mb-2">
                          <div>
                            <input type="radio" name="q_<%=item.id%>" value="<%=item.variant_a%>" class="one" id="<%=item.variant_a%>" />
                            <input type="radio" name="q_<%=item.id%>" value="<%=item.variant_b%>" class="two" id="<%=item.variant_b%>" />
                            <input type="radio" name="q_<%=item.id%>" value="<%=item.variant_c%>" class="three" id="<%=item.variant_c%>" />
                            <input type="radio" name="q_<%=item.id%>" value="<%=item.variant_d%>" class="four" id="<%=item.variant_d%>" />
                            <label for="<%=item.variant_a%>" class="box first">
                              <div class="course">
                                <span class="circle"> </span>
                                <span class="subject">   
                                  <%=item.variant_a%>
                                </span>
                              </div>
                            </label>
                            <label for="<%=item.variant_b%>" class="box second">
                              <div class="course">
                                <span class="circle"></span>
                                <span class="subject">
                                  <%=item.variant_b%>
                                </span>
                              </div>
                            </label>
                          <label for="<%=item.variant_c%>" class="box third">
                            <div class="course">
                              <span class="circle"></span>
                              <span class="subject">
                                <%=item.variant_c%>
                              </span>
                            </div>
                          </label>
                          <label for="<%=item.variant_d%>" class="box forth">
                            <div class="course">
                              <span class="circle"></span>
                              <span class="subject"> 
                                <%=item.variant_d%>    
                              </span>
                            </div>

                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  
                </div>
              </div>
              <% }); %>
              
              <div class="send-btn-check">
                <button type="submit" class="btn btn-primary">YUBORISH</button>
              </div>
              
              
            </form>
              
              
              
              
              
              
